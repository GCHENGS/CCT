<Window x:Class="CCT.View.ToolInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CCT.View"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Style="{StaticResource Popup_Window}"
        Title="{DynamicResource WindowToolInfoTitle}" 
        Height="180" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0"  Content="{DynamicResource CCTInfo}"></Label>

        <TextBlock Grid.Row="0" Grid.Column="1" Margin="4,0,0,0" HorizontalAlignment="Left" Text="{Binding Path=ToolInfo}" TextWrapping="Wrap"/>

        <Button Grid.Row="1" Grid.ColumnSpan="2" 
                Width="60" Height="22" 
                Content="{DynamicResource Confirm}" 
                Margin="10" HorizontalAlignment="Right" 
                Click="Button_Click"/>
    </Grid>
</Window>
